@model BlogTeste1.Models.UsuarioViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resenha Cultural</title>
    <link rel="stylesheet" href="~/Content/Reset.css" class="href">
    <link rel="stylesheet" href="~/Content/bootstrap.css" class="href">
</head>
<body>
    <div class="container">
        <main>
            <h2>Login</h2>
            @using (Html.BeginForm())
            {
                <div class="has-error">
                    @Html.ValidationSummary()
                </div>

                <div class="form-group">
                    @Html.LabelFor(u => u.LoginName)
                    @Html.TextBoxFor(u => u.LoginName)
                </div>

                <div class="form-group">
                    @Html.LabelFor(u => u.Senha)
                    @Html.PasswordFor(u => u.Senha)
                </div>

                <button class="btn btn-default" type="submit">Entrar</button>
            }
            <p>Não possui conta? <a href="registro.html">Registre-se</a> gratuitamente!.</p>
        </main>
    </div>
</body>
</html>